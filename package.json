{
  "name": "ptitpote",
  "private": true,
  "version": "1.0.0",
  "description": "a discord bot",
  "main": "app.js",
  "type": "module",
  "engines": {
    "node": ">=22.x"
  },
  "scripts": {
    "start": "node dist/src/app.js",
    "register": "node dist/src/register.js",
    "dev": "nodemon -q dist/src/app.js",
    "test": "vitest --config ./vitest.config.ts run",
    "build": "tsc --pretty",
    "lint": "prettier . --check"
  },
  "mikro-orm": {
    "useTsNode": false,
    "configPaths": [
      "./dist/src/mikro-orm.config.js"
    ]
  },
  "author": "GTSpray",
  "license": "MIT",
  "dependencies": {
    "@mikro-orm/core": "^6.5.3",
    "@mikro-orm/mariadb": "^6.5.4",
    "@mikro-orm/migrations": "^6.5.4",
    "@mikro-orm/reflection": "^6.5.4",
    "discord-interactions": "^4.3.0",
    "discord.js": "^14.22.1",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "morgan": "^1.10.1",
    "uuid": "^13.0.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^4.1.9"
  },
  "devDependencies": {
    "@mikro-orm/cli": "^6.5.4",
    "@types/express": "^5.0.3",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.5.2",
    "discord-api-types": "^0.38.25",
    "node-mocks-http": "^1.17.2",
    "nodemon": "^3.1.10",
    "prettier": "3.6.2",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
